    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/tvName"
        android:text="Name"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSkill"
        android:textSize="19sp"
        android:text="Skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>